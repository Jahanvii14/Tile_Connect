<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/hello"
    tools:context="com.example.a.myapplication.LoginScreenActivity"
    android:background="@drawable/back"
    android:backgroundTint="#ff96f1ff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#db1e1e1e"
        android:backgroundTint="#ff2a2a2a"
        android:fillViewport="false"
        android:id="@+id/abc">

    </ScrollView>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="144dp"
        android:id="@+id/imageView16"
        android:layout_x="105dp"
        android:layout_y="1dp"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_marginTop="15dp"
        android:layout_x="3dp"
        android:layout_y="175dp"
        android:textSize="25dp"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:hint="Email" />

    <Button
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button5"
        android:layout_x="8dp"
        android:layout_y="325dp"
        android:textSize="35dp"
        android:background="#00FFFF"
        android:onClick="login" />
    <Button
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Create An Account"
        android:id="@+id/button6"
        android:layout_x="8dp"
        android:layout_y="400dp"
        android:textSize="27dp"
        android:background="#00FFFF"
        android:onClick="register" />

    <EditText
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_x="8dp"
        android:layout_y="265dp"
        android:hint="Password"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:textSize="25dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/button9"
        android:layout_x="125dp"
        android:layout_y="475dp"
        android:textSize="22dp"
        android:onClick="skip"
        android:background="#db1e1e1e"
        android:backgroundTint="#ff2a2a2a"
        android:textColor="#ffffff"/>

</AbsoluteLayout>
